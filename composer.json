{
  "name": "mrtnzlml/testbench",
  "description": "Simple integration testing tool for Nette Framework applications",
  "type": "library",
  "license": [
    "BSD-3-Clause",
    "GPL-2.0",
    "GPL-3.0"
  ],
  "authors": [
    {
      "name": "Martin ZlÃ¡mal",
      "homepage": "http://zlml.cz/"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "nette/application": ">=2.2.0",
    "nette/bootstrap": ">=2.2.0",
    "nette/di": ">=2.2.0",
    "nette/tester": ">=1.2.0",
    "kdyby/fake-session": "^2.0"
  },
  "require-dev": {
    "latte/latte": ">=2.2.0",
    "nette/forms": ">=2.2.0",
    "nette/robot-loader": ">=2.2.0",
    "tracy/tracy": ">=2.2.0",
    "kdyby/doctrine": ">=2.0.0",
    "nette/database": ">=2.2.0"
  },
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
  },
  "bin": [
    "src/run-tests"
  ],
  "suggest": {
    "kdyby/doctrine": "Allows enhanced database tests using Doctrine",
    "nette/database": "Allows enhanced database tests using Nette\\Database"
  }
}
